{
  "name": "startup-nation-website",
  "version": "1.0.0",
  "description": "Startup Nation - Tampere Startup Association Website",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "python -m http.server 8000",
    "build": "npm run minify && npm run optimize",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o dist/styles.min.css styles.css",
    "minify:js": "terser script.js social-sharing.js -o dist/script.min.js",
    "optimize": "npm run optimize:images && npm run generate:sitemap",
    "optimize:images": "echo 'Image optimization would go here'",
    "generate:sitemap": "echo 'Sitemap already generated'",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir .",
    "deploy:firebase": "firebase deploy",
    "test": "npm run test:lighthouse && npm run test:accessibility",
    "test:lighthouse": "lighthouse http://localhost:8000 --output=html --output-path=./lighthouse-report.html",
    "test:accessibility": "pa11y http://localhost:8000",
    "serve": "python -m http.server 8000",
    "preview": "open http://localhost:8000/launch.html"
  },
  "keywords": [
    "startup",
    "tampere",
    "finland",
    "entrepreneurship",
    "innovation",
    "pwa",
    "website",
    "association"
  ],
  "author": "Tampere Startup Association",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/startupnation/website.git"
  },
  "homepage": "https://startupnation.fi",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "lighthouse": "^10.4.0",
    "pa11y": "^7.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
